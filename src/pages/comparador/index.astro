---
import BaseLayout from "../../layouts/BaseLayout.astro";

const title = "Comparador — Nova Raiz";
const description = "As comparativas agora ficam no hub, com links para os artigos completos.";
---
<BaseLayout title={title} description={description} canonical="https://novaraiz.netlify.app/comparador/">
  <section class="py-10 md:py-14">
    <div class="mx-auto max-w-3xl">
      <h1 class="text-3xl md:text-4xl" style="font-family:'Playfair Display', serif;">Comparador</h1>
      <p class="mt-4 text-lg" style="color: var(--muted);">
        Atualizamos esta área. As comparativas estão reunidas no hub abaixo.
      </p>

      <div class="mt-6 rounded-3xl border p-6" style="border-color: var(--border); background: var(--card);">
        <a class="underline text-base font-semibold" href="/comparativas/">Ir para o hub de comparativas →</a>
        <div class="mt-3 text-sm" style="color: var(--muted);">
          Se você salvou este link nos favoritos, pode atualizar para <code>/comparativas/</code>.
        </div>
      </div>

      <meta http-equiv="refresh" content="0; url=/comparativas/" />
    </div>
  </section>
</BaseLayout>
