---
const { post } = Astro.props;
const url = `/blog/${post.slug}`;
---

<a href={url} class="rounded-3xl border p-5 hover:opacity-90"
  style="border-color: var(--border); background: var(--card);">
  <div class="text-xs font-semibold uppercase tracking-wide" style="color: var(--muted);">
    {post.data.category}
  </div>
  <div class="mt-2 text-xl leading-snug" style="font-family:'Playfair Display', serif;">
    {post.data.title}
  </div>
  <p class="mt-2 text-sm leading-relaxed" style="color: var(--muted);">
    {post.data.description}
  </p>
  <div class="mt-4 text-xs" style="color: var(--muted);">
    {post.data.pubDate.toLocaleDateString("pt-BR")}
  </div>
</a>
